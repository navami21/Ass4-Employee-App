<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>    
    <link rel="stylesheet" href="/css/home.css">

</head>
<body>
    <nav class="navbar navbar-expand-lg">
      <div class="container-fluid">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
          <a class="navbar-brand" href="#">Employee-App</a>
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            <% for(let i = 0; i < nav.length; i++) { %>
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href=<%= nav[i].link %>><%= nav[i].name %></a>
              </li>
            <% } %>
            </ul>          
          
        </div>
      </div>
    </nav>
    <div class="head text-center mt-4"><h1>Employee's Details</h1></div>
    <div class="container mt-4">
      <div class="row">
      <!-- Cards Column -->
      <!-- <div class="col-12 mb-4 w-50"> -->
        <div class="d-flex flex-wrap gap-3  mt-4">
          <% for(let i = 0; i < data.length; i++) { %>
            <div class="card" style="width: 16rem; flex: 0 0 auto;">
              <div class="card-body">
                <h5 class="card-title">Emp Name : <%= data[i].emp_name %></h5>
                <p class="card-text">Emp Designation : <%= data[i].emp_designation %></p>
                <p class="card-text">Emp Location : <%= data[i].emp_location %></p>
                <p class="card-text">Emp  Salary : <%= data[i].emp_salary %></p>
                <a class="btn btn-success btn-sm" href="/emp/update/<%=data[i]._id%>">Update</a>
                <a class="btn btn-danger btn-sm" href="/emp/delete/<%=data[i]._id%>">Delete</a>
              </div>
            </div>
          <% } %>
        </div>
      </div>
</body>
</html>